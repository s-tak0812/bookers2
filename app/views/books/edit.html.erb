<h1>Editing Book</h1>

<%= form_with model:@book do |f| %>

  <p>Title</p>
  <p><%= f.text_field :title, autofocus: true %></p>

  <p>Opinion</p>
  <p><%= f.text_area :body, autofocus: true %></p>

  <p><%= f.submit "Update Book" %></p>

<% end %>

<%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path %>

<div class="container">
  <div class="row">
    <div class="col-lg-5 col-md-8 mx-auto my-3">

      <h1>Editing Book</h1>

      <div>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= I18n.t("errors.messages.not_saved",
                         count: @book.errors.count,
                         resource: @book.class.model_name.human.downcase)
               %>
            </h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <div>
        <%= form_with model:@book do |f| %>

          <p>Title</p>
          <p><%= f.text_field :title, autofocus: true, class: "col-12" %></p>

          <p>Opinion</p>
          <p><%= f.text_area :body, autofocus: true, class: "col-12" %></p>

          <p><%= f.submit "Update Book", class: "btn btn-success text-white" %></p>

        <% end %>

        <%= link_to "Show", book_path(@book)%> |
        <%= link_to "Back", books_path %>
      </div>

    </div>
  </div>
</div>


















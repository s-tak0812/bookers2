<div class="container">

  <div class="mt-2">
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= I18n.t("errors.messages.not_saved",
                     count: @book.errors.count,
                     resource: @book.class.model_name.human.downcase)
           %>
        </h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="d-flex">
    <!--<div class="row">-->
      <%= render 'list', book: @book, user: @user %>

      <div class="container col-md-8  offset-md-1">
        <div class="row">
          <div class="col mt-3 col-12">
            <h2 class="pb-2 border-bottom">Books</h2>

            <div>
              <table class="col-12 table-hover">
                <tr class="border-bottom">
                  <th class="px-3"></th>
                  <th class="pb-2 px-3">Title</th>
                  <th class="pb-2 px-3">Opinion</th>
                </tr>

                <% @books.each do |book| %>
                  <tr class="col-12 my-2 border-top">
                    <td class="p-3">
                      <%= link_to user_path(book.user.id) do %>
                        <%= image_tag book.user.get_profile_image(80, 80) %>
                      <% end %>
                    </td>

                    <td align="left" valign="top" class="px-3">
                      <%= link_to book.title, book_path(book.id) %>
                    </td>

                    <td align="left" valign="top" class="px-3">
                      <%= book.body %>
                    </td>
                  </tr>

                 <% end %>

              </table>

            </div>

          </div>
        </div>
      </div>
    <!--</div>-->
  </div>
</div>

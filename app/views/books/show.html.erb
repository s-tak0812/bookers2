<%= flash[:notice] %>


<div class="container">
  <div class="d-flex">

    <%= render 'list', book: @book, user: @user %>


    <div class="container ml-5">
      <div class="row">
        <div class="col mt-3 col-12">
          <h2 class="pb-2 border-bottom">Book detail</h2>

          <div>
            
            <table class="col-12">
              <tr>
                <td class="px-3">
                  <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag @book.user.get_image(100, 100) %>
                    <div><%= @user.name %></div>
                  <% end %>
                </td>
                
                <td align="left" valign="top" class="px-3">
                  <%= link_to @book.title, @book_path %>
                </td>
                
                <td align="left" valign="top" class="px-3">
                  <%= @book.body %>
                </td>


                <% if @book.user == current_user %>
                  <td align="left" valign="top" class="px-3">
                    <%= link_to "Edit", edit_book_path, class: "m-2 btn btn-success btn-sm text-light" %>
                  </td>
                  <td align="left" valign="top" class="px-3">
                    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？",
                    class: "m-2 btn btn-danger btn-sm text-light" %>
                  </td>  
                <% end %>
    
              </tr>
            </table>  

          </div>

        </div>

      </div>
    </div>

  </div>
</div>

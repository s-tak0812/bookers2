<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="text-reset  text-decoration-none">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-2">
        <div class="container">

          <a href="/" class="navbar-brand">Bookers</a>

          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
                    <span><i class="fas fa-home"></i> Home</span>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to users_path, class: 'nav-link text-light' do %>
                    <span><i class="fas fa-users"></i> Users</span>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to books_path, class: 'nav-link text-light' do %>
                    <span><i class="fas fa-book-open"></i> Books</span>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
                    <span><i class="fas fa-sign-out-alt"></i> Log out</span>
                  <% end %>
                </li>

              <% else %>

                <li class="nav-item">
                  <%= link_to root_path, class: 'nav-link text-light' do %>
                    <span><i class="fas fa-home"></i> Home</span>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to '/home/about', class: 'nav-link text-light' do %>
                    <span><i class="fas fa-link"></i> About</span>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                    <span><i class="fas fa-user-plus"></i> Sign up</span>
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                    <span><i class="fas fa-sign-in-alt"></i> Log in</span>
                  <% end %>
                </li>



                <% end %>
            </ul>
          </div>
        </div>
      </nav>

    </header>

    <main>

      <%= yield %>

    </main>

    <footer class="text-center mt-5">
      <p>CopyRight Infratop.inc</p>
    </footer>



  </body>
</html>

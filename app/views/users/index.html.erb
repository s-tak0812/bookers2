<div class="container">
  <div class="d-flex">

    <%= render 'books/list', book: @book, user: @user %>


    <div class="row">
      <div class="col mt-3">
        <h2 class="border-bottom">Users</h2>

        <div class="col">
          <table>
            <tr class="border-bottom border-secondary">
              <th class="px-3">image</th>
              <th class="px-3">name</th>
              <th></th>
            </tr>

            <% @users.each do |user| %>
              <tr class="my-2 border-bottom">
                <td class="p-3">
                  <%= image_tag user.get_image(80, 80) %>
                </td>

                <td align="left" valign="top" class="px-3">
                  <%= user.name %>
                </td>

                <td valign="top" class="px-3">
                  <%= link_to "Show", user_path(user.id) %>
                </td>
              </tr>

             <% end %>

          </table>

        </div>

      </div>



    </div>

  </div>

</div>




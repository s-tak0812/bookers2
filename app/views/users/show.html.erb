<%= flash[:notice] %>

<%= flash[:success] %>


<div class="container">
  <div class="d-flex">

  <%= render 'books/list', book: @book, user: @user %>

    <div class="container ml-5">
      <div class="row">
        <div class="col mt-3 col-12">
          <h2 class="pb-2 border-bottom">Books</h2>

          <div>
            <table class="col-12 table-hover">
              <tr class="border-bottom border-secondary">
                <th class="px-3"></th>
                <th class="pb-2 px-3">Title</th>
                <th class="pb-2 px-3">Opinion</th>
              </tr>

              <% @user.books.each do |book| %>
                <tr class="col-12 my-2 border-bottom">
                  <td class="p-3">
                    <%= link_to user_path(book.user.id) do %>
                      <%= image_tag book.user.get_profile_image(80, 80) %>
                    <% end %>
                  </td>

                  <td align="left" valign="top" class="px-3">
                    <%= link_to book.title, book_path(book.id) %>
                  </td>

                  <td align="left" valign="top" class="px-3">
                    <%= book.body %>
                  </td>
                </tr>

               <% end %>

            </table>

          </div>

        </div>
      </div>
    </div>

  </div>
</div>


